<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo1.HelloController">

    <padding><Insets top="40" bottom="40" left="30" right="30"/></padding>

    <Label text="Welcome to CV Builder" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextArea editable="false" wrapText="true" prefWidth="400" prefHeight="100"
              text="This application helps you create a professional Curriculum Vitae (CV). Click below to begin." />

    <Button text="Create New CV" onAction="#handleCreateCV" prefWidth="200"/>

</VBox>
