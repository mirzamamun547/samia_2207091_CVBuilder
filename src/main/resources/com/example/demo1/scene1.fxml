<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" style="-fx-background-color: linear-gradient(to bottom, #dcdcdc, #ffffff); -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.scene1Controller">

    <children>

        <!-- Section Title -->
        <Label layoutX="40" layoutY="20" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2a4d7d;" text="Personal Details" />

        <!-- Name -->
        <Label layoutX="40" layoutY="70" style="-fx-font-weight: bold;" text="Name" />
        <TextField fx:id="namebutton" layoutX="180" layoutY="65" prefWidth="300" />

        <!-- Email -->
        <Label layoutX="40" layoutY="110" style="-fx-font-weight: bold;" text="Email" />
        <TextField fx:id="emailbutton" layoutX="180" layoutY="105" prefWidth="300" />

        <!-- Phone -->
        <Label layoutX="40" layoutY="150" style="-fx-font-weight: bold;" text="Phone Number" />
        <TextField fx:id="phonebutton" layoutX="180" layoutY="145" prefWidth="300" />

        <!-- Address -->
        <Label layoutX="40" layoutY="190" style="-fx-font-weight: bold;" text="Address" />
        <TextField fx:id="addressbutton" layoutX="180" layoutY="185" prefWidth="300" />

        <!-- DOB -->
        <Label layoutX="40" layoutY="230" style="-fx-font-weight: bold;" text="Date of Birth" />
        <TextField fx:id="dobbutton" layoutX="180" layoutY="225" prefWidth="300" />

        <!-- Nationality -->
        <Label layoutX="40" layoutY="270" style="-fx-font-weight: bold;" text="Nationality" />
        <TextField fx:id="nationalitybutton" layoutX="180" layoutY="265" prefWidth="300" />

        <!-- Education -->
        <Label layoutX="40" layoutY="310" style="-fx-font-weight: bold;" text="Education" />
        <TextField fx:id="educationbutton" layoutX="180" layoutY="305" prefWidth="300" />

        <!-- Skills -->
        <Label layoutX="40" layoutY="350" style="-fx-font-weight: bold;" text="Skills" />
        <TextField fx:id="skillsbutton" layoutX="180" layoutY="345" prefWidth="300" />

        <!-- Experience -->
        <Label layoutX="40" layoutY="390" style="-fx-font-weight: bold;" text="Experience" />
        <TextField fx:id="experiencebutton" layoutX="180" layoutY="385" prefWidth="300" />

        <!-- Projects -->
        <Label layoutX="40" layoutY="430" style="-fx-font-weight: bold;" text="Projects" />
        <TextField fx:id="projectbutton" layoutX="180" layoutY="425" prefWidth="300" />

        <!-- Image Upload -->
        <Button layoutX="40" layoutY="470" onAction="#handleImageUpload" style="-fx-background-color: #2a4d7d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Add Photo (optional)" />
        <ImageView fx:id="profileImage" fitHeight="100" fitWidth="100" layoutX="180" layoutY="460" preserveRatio="true" style="-fx-border-color: #999; -fx-border-width: 2; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, gray, 5, 0.5, 2, 2);" />

        <!-- Submit -->
        <Button layoutX="250" layoutY="580" onAction="#login" style="-fx-background-color: #009966; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Generate CV" />
      <Button fx:id="updatebutton" layoutX="267.0" layoutY="616.0" mnemonicParsing="false" onAction="#update" style="-fx-background-color: #009966; -fx-background-radius: 8;" text="Update" />
      <Button fx:id="deletebutton" layoutX="267.0" layoutY="658.0" mnemonicParsing="false" onAction="#delete" text="Delete" />
    </children>
</AnchorPane>
