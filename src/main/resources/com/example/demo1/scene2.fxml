<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo1.scene2Controller"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom, #cccccc, #ffffff);">


    <children>
        <!-- Profile Image -->
        <ImageView fx:id="profileImagePreview"
                   layoutX="50" layoutY="40"
                   fitWidth="150" fitHeight="170"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, gray, 8, 0.5, 2, 2);
                          -fx-border-color: #2a4d7d;
                          -fx-border-width: 2;
                          -fx-border-radius: 8;"/>

        <!-- Section Header -->
        <Label text="PERSONAL INFO"
               layoutX="200" layoutY="40"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a4d7d;"/>

        <!-- Personal Info Labels -->
        <Label fx:id="name2" layoutX="200" layoutY="80"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <Label fx:id="email2" layoutX="200" layoutY="110"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <Label fx:id="dob2" layoutX="200" layoutY="140"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <Label fx:id="nationality2" layoutX="200" layoutY="170"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>

        <!-- Education -->
        <Label text="EDUCATION"
               layoutX="50" layoutY="220"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #006699;"/>
        <Label fx:id="education2" layoutX="200" layoutY="220"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>

        <!-- Skills -->
        <Label text="SKILLS"
               layoutX="50" layoutY="260"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #009966;"/>
        <Label fx:id="skill2" layoutX="200" layoutY="260"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>

        <!-- Experience -->
        <Label text="EXPERIENCE"
               layoutX="50" layoutY="300"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #cc3300;"/>
        <Label fx:id="experience2" layoutX="200" layoutY="300"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
    </children>
</AnchorPane>
