<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Line?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo1.scene2Controller"
            prefHeight="700.0" prefWidth="800.0"
            style="-fx-background-color: white;">

    <children>
        <!-- Left Sidebar -->
        <AnchorPane layoutX="0" layoutY="0" prefWidth="250" prefHeight="700"
                    style="-fx-background-color: #2a4d7d;">
            <children>
                <!-- Profile Image -->
                <ImageView fx:id="profileImagePreview"
                           layoutX="50" layoutY="40"
                           fitWidth="150" fitHeight="170"
                           preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, gray, 8, 0.5, 2, 2);
                                  -fx-border-color: white;
                                  -fx-border-width: 2;
                                  -fx-border-radius: 8;"/>

                <!-- Contact Info -->
                <Label text="CONTACT" layoutX="20" layoutY="230"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label fx:id="phone2" layoutX="20" layoutY="260" style="-fx-text-fill: white;"/>
                <Label fx:id="email2" layoutX="20" layoutY="280" style="-fx-text-fill: white;"/>
                <Label fx:id="address2" layoutX="20" layoutY="300" style="-fx-text-fill: white;"/>

                <!-- Skills -->
                <Label text="SKILLS" layoutX="20" layoutY="340"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label fx:id="skill2" layoutX="20" layoutY="370" style="-fx-text-fill: white;"/>
            </children>
        </AnchorPane>

        <!-- Right Content -->
        <AnchorPane layoutX="260" layoutY="0" prefWidth="540" prefHeight="700">
            <children>
                <!-- Name and Title -->
                <Label fx:id="name2" layoutX="20" layoutY="40"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a4d7d;"/>
                <Label fx:id="title2" layoutX="20" layoutY="75"
                       style="-fx-font-size: 16px; -fx-text-fill: #333;"/>

                <!-- Personal Info -->
                <Label fx:id="dob2" layoutX="20" layoutY="110" style="-fx-text-fill: #333;"/>
                <Label fx:id="nationality2" layoutX="20" layoutY="130" style="-fx-text-fill: #333;"/>

                <!-- Experience -->
                <Label text="PROFESSIONAL EXPERIENCE" layoutX="20" layoutY="170"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #cc3300;"/>
                <Label fx:id="experience2" layoutX="20" layoutY="200" style="-fx-text-fill: #333;"/>

                <!-- Education -->
                <Label text="EDUCATION" layoutX="20" layoutY="260"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #006699;"/>
                <Label fx:id="education2" layoutX="20" layoutY="290" style="-fx-text-fill: #333;"/>

                <!-- Projects -->
                <Label text="PROJECTS" layoutX="20" layoutY="340"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #663399;"/>
                <Label fx:id="project2" layoutX="20" layoutY="370" style="-fx-text-fill: #333;"/>

                <!-- Contact (LinkedIn, GitHub, etc.) -->
                <Label fx:id="contact2" layoutX="20" layoutY="420" style="-fx-text-fill: #333;"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>